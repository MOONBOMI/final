package com.example.controller;

import java.util.HashMap;
import java.util.List;

import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.util.WebUtils;

import com.example.mapper_oracle.CompanyMapper;
@Controller
public class CompanyController {
	@Autowired
	CompanyMapper mapper;
	
	@ResponseBody
	@RequestMapping("list")
	public List<HashMap<String,Object>> list(HttpSession session, HttpServletRequest request){
		List<HashMap<String, Object>> map=mapper.companylist();
		Cookie cookie=WebUtils.getCookie(request, "uid");
		if(cookie != null) {
			session.setAttribute("uid", cookie.getValue());
		}
		//String dest=(String)session.getAttribute("dest");
		return map;
	}
}
