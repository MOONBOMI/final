	@ResponseBody
	@RequestMapping(value="login", method=RequestMethod.POST)
	public List<CompanyVO> loginPost(CompanyVO vo, HttpSession session, boolean chklogin, HttpServletResponse response){
		
		CompanyVO resultVO=mapper.companylist(vo.getCompanycode());
		if(resultVO==null) {
			return 0;
		} else if (resultVO.getUpw().equals(vo.getUpw())){
			session.setAttribute("uid", vo.getUid());//技记历厘
			if(chklogin){
				Cookie cookie=new Cookie("uid",vo.getUid());//捻虐历厘
				cookie.setPath("/");
				cookie.setMaxAge(60*60*24*7);
				response.addCookie(cookie);
			}
			return 1;
		} 
		return 2;
	}
}
